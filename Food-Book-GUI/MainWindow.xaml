<Window x:Class="Food_Book_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Food_Book_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox Height="420" Width="780">
        <StackPanel Height="200" Width="400">
            <Label Content="Please select what you would like to do" HorizontalAlignment="Center"  Margin="0,20,0,0" />
            <Button Content="List Recipes" Name="List" Width="100" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Click="List_Click" />
            <Button Content="Add Recipes" Name="Add" Width="100" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Click="Add_Click" />
            <Button Content="Close App" Name="Close" Width="100" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Click="Close_Click" />
            
        </StackPanel>
    </Viewbox>
    
</Window>
